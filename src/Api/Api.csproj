<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <Description>
            Taskly is a task management system built with Event Sourcing and CQRS patterns.
            It demonstrates DDD concepts in a clean architecture, allowing users to create,
            assign, and track tasks with full event history.
        </Description>
        <Authors>brunovdribeiro</Authors>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Application\Application.csproj" />
      <ProjectReference Include="..\Domain\Domain.csproj" />
      <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="NSwag.AspNetCore" Version="14.2.0" />
    </ItemGroup>

</Project>
